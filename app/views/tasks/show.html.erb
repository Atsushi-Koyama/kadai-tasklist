<h1>id: <%= @task.id %> のタスク詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th>タスクの名前</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>タスクの状態</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<%= link_to 'タスク一覧へ戻る', tasks_path , class: 'btn btn-default'%>
<%= link_to 'タスクを編集する', edit_task_path(@task) ,class: 'btn btn-primary' %>
<%= link_to 'タスクを削除する', @task, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: 'btn btn-danger' %>