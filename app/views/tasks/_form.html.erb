<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <ul>
      <% task.errors.full_messages.each do |task| %>
        <li><%= task %></li>
        <% end %>
    </ul>
  </div>
<% end %>
  
  
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
    <%= f.label :status, 'タスクの状態' %>
  <%= f.text_field :status %>
  
  <%= f.submit '登録' %>
<% end %>
